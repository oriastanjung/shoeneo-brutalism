---
import Button from "./Button.astro";
import Hamburger from "astro-heroicons/solid/Bars3.astro"

---

<header class="text-black">
    <nav class="border border-[#939393] flex items-center bg-white h-14 container mx-auto" >
        <div class=" w-1/2 md:px-0 md:w-2/12 bg-white border-e border-[#939393] h-full flex items-center justify-center">
            <h1>
                <img src="/logo.svg" alt="" class="w-16 h-14 object-cover object-center">
            </h1>
        </div>
        <ul class="hidden md:flex w-8/12 h-full  items-center justify-center gap-5">
            <li class="hover:underline">
                <a href="/">Home</a>
            </li>
            <li class="hover:underline">
                <a href="/browse">Browse</a>
            </li>
            <li class="hover:underline">
                <a href="/transactions">Transactions</a>
            </li>
        </ul>
        <div class="hidden md:flex w-2/12 bg-white border-l border-[#939393] h-full  items-center justify-center">
            <div class="w-full px-8">
                <Button isBlack={true} backgroundColor="#FFB800">Login</Button>
            </div>
        </div>
        <div class="md:hidden flex justify-end w-full items-center px-3">
            <button>
                <Hamburger class="w-10 h-10"/>
            </button>
        </div>
    </nav>
</header>